# ==========================================
# GalaOS Environment Configuration
# Copy this file to .env and update the values
# ==========================================

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_PASSWORD=galaos_secure_password_change_me
DATABASE_URL=postgresql://galaos:galaos_secure_password_change_me@localhost:5432/galaos

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=redis_secure_password_change_me
REDIS_URL=redis://:redis_secure_password_change_me@localhost:6379

# ==========================================
# Security & Authentication
# ==========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=generate-a-32-byte-hex-key-using-command-above
SESSION_SECRET=your_session_secret_here

# ==========================================
# AI Provider API Keys
# ==========================================
# REQUIRED for self-coding feature: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Optional: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Optional: https://ai.google.dev/
GOOGLE_API_KEY=your-google-api-key-here

# Optional: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-token-here

# Optional: Other providers
COHERE_API_KEY=
MISTRAL_API_KEY=

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
PORT=4000
WEB_PORT=3000

# Frontend URL
NEXT_PUBLIC_API_URL=http://localhost:4000

# ==========================================
# Docker Service URLs (Internal)
# ==========================================
OLLAMA_URL=http://ollama:11434
MINIO_URL=http://minio:9000
NEO4J_URL=bolt://neo4j:7687
QDRANT_URL=http://qdrant:6333
PYTORCH_URL=http://pytorch-serve:8080
WHISPER_URL=http://whisper:8000

# Provider Base URLs (Optional - uses defaults if not set)
PERPLEXITY_BASE_URL=https://api.perplexity.ai
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# ==========================================
# Model Context Protocol (MCP) Configuration
# ==========================================
# Path to MCP servers configuration file
MCP_CONFIG_PATH=/etc/galaos/mcp-servers.json

# Enable Docker container watching for MCP servers
MCP_ENABLE_DOCKER_WATCH=true

# ==========================================
# Self-Update Configuration
# ==========================================
AUTO_UPDATE_ENABLED=true
UPDATE_BRANCH=main
GITHUB_REPO=justinwalkertattoo/GalaOS
BACKUP_RETENTION_COUNT=5

# ==========================================
# Self-Coding Configuration
# ==========================================
HOT_RELOAD_ENABLED=true

# ==========================================
# Optional Services
# ==========================================
# MinIO (Object Storage)
MINIO_ROOT_USER=galaos
MINIO_ROOT_PASSWORD=minio_secure_password_change_me

# Neo4j (Knowledge Graph)
NEO4J_PASSWORD=neo4j_secure_password_change_me

# RabbitMQ (Message Queue)
RABBITMQ_USER=galaos
RABBITMQ_PASSWORD=rabbitmq_secure_password_change_me

# Grafana (Monitoring)
GF_SECURITY_ADMIN_PASSWORD=admin_password_change_me

# ==========================================
# Integration Providers (Optional)
# ==========================================
BUFFER_ACCESS_TOKEN=your-buffer-token-here
SENDGRID_API_KEY=your-sendgrid-key-here
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
