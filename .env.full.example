# ============================================================================
# GalaOS Complete Infrastructure Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================
POSTGRES_PASSWORD=galaos_secure_password_change_me
REDIS_PASSWORD=redis_secure_password_change_me
NEO4J_PASSWORD=neo4j_secure_password_change_me

# ============================================================================
# MESSAGE QUEUE
# ============================================================================
RABBITMQ_USER=galaos
RABBITMQ_PASSWORD=rabbitmq_secure_password_change_me

# ============================================================================
# OBJECT STORAGE
# ============================================================================
MINIO_ROOT_USER=galaos
MINIO_ROOT_PASSWORD=minio_secure_password_change_me
MINIO_BUCKET=galaos-media

# ============================================================================
# MONITORING
# ============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_secure_password_change_me

# ============================================================================
# LANGFUSE (LLM Observability)
# ============================================================================
LANGFUSE_SECRET=langfuse_secret_key_change_me_32_chars_minimum
LANGFUSE_SALT=langfuse_salt_change_me_32_chars_minimum
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=

# ============================================================================
# BROWSERLESS
# ============================================================================
BROWSERLESS_TOKEN=browserless_secure_token_change_me

# ============================================================================
# AI PROVIDER API KEYS
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# GALAOS SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# ============================================================================
# BUFFER INTEGRATION (for social media)
# ============================================================================
BUFFER_CLIENT_ID=
BUFFER_CLIENT_SECRET=
BUFFER_ACCESS_TOKEN=

# ============================================================================
# SENDGRID (for email)
# ============================================================================
SENDGRID_API_KEY=

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================
# If using cloud vector DB instead of Qdrant
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=

# If using cloud Langfuse instead of self-hosted
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================================================
# GPU CONFIGURATION
# ============================================================================
# For NVIDIA GPU support (requires nvidia-docker2)
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# ============================================================================
# RESOURCE LIMITS (adjust based on your hardware)
# ============================================================================
OLLAMA_MAX_LOADED_MODELS=3
PYTORCH_WORKERS=2
WHISPER_MAX_CONCURRENT=2
BROWSERLESS_MAX_CONCURRENT_SESSIONS=5

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
NODE_ENV=production
LOG_LEVEL=info
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Uncomment for development
# NODE_ENV=development
# LOG_LEVEL=debug
# HOT_RELOAD=true
