# GalaOS Environment Configuration (template)
# Copy to .env and set your values

# --- Core Services ---
NODE_ENV=production
PORT=4000
WEB_PORT=3000

# Database
POSTGRES_PASSWORD=change_me_strong
DATABASE_URL=postgresql://galaos:${POSTGRES_PASSWORD}@localhost:5432/galaos

# Redis
REDIS_PASSWORD=change_me_strong
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# Security
# Generate 32-byte hex values
JWT_SECRET=
ENCRYPTION_KEY=
SESSION_SECRET=

# --- AI Providers ---
# Add the keys you intend to use (optional unless noted)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
COHERE_API_KEY=
MISTRAL_API_KEY=

# --- Internal Services (Docker) ---
NEXT_PUBLIC_API_URL=http://localhost:4000/trpc
OLLAMA_URL=http://ollama:11434
MINIO_URL=http://minio:9000
NEO4J_URL=bolt://neo4j:7687
QDRANT_URL=http://qdrant:6333
PYTORCH_URL=http://pytorch-serve:8080
WHISPER_URL=http://whisper:9000

# --- Self-Update ---
AUTO_UPDATE_ENABLED=true
UPDATE_BRANCH=main
GITHUB_REPO=justinwalkertattoo/GalaOS
BACKUP_RETENTION_COUNT=5

# --- Self-Coding / Hot Reload ---
HOT_RELOAD_ENABLED=true

# --- Optional Service Credentials ---
MINIO_ROOT_USER=galaos
MINIO_ROOT_PASSWORD=change_me_strong
NEO4J_PASSWORD=change_me_strong
RABBITMQ_USER=galaos
RABBITMQ_PASSWORD=change_me_strong
GF_SECURITY_ADMIN_PASSWORD=change_me_strong

# --- Integrations (examples) ---
BUFFER_ACCESS_TOKEN=
SENDGRID_API_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=

# --- OAuth Client IDs/Secrets (if using OAuth flows) ---
# Example naming: PROVIDER_CLIENT_ID / PROVIDER_CLIENT_SECRET
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# --- MCP (Local PC Control) ---
# WARNING: Powerful. Keep disabled unless you understand the risks.
MCP_ENABLE=false
MCP_ACCESS_TOKEN=
# Comma-separated allowlists
MCP_ALLOWED_COMMANDS=cmd,powershell,dir,copy,move,git,node,npm,code,explorer
MCP_ALLOWED_DIRS=${PWD}
MCP_ALLOWED_APPS=code,notepad,calc

# --- Dev Superuser & Experimental Mode (DEV ONLY) ---
# Grant full override access to the developer. Do not set in production.
# Use your actual email/ID from the User table.
# DEV_SUPERUSER_EMAIL=
# DEV_SUPERUSER_ID=
# Set to 1 to allow local-dev superuser without identity binding (dev only)
# DEV_SUPERUSER_LOCAL=0
# Relax confirmations for prototyping
# EXPERIMENTAL_MODE=0
