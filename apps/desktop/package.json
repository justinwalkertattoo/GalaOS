{
  "name": "@galaos/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "description": "GalaOS Desktop wrapper (Electron)",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win nsis"
  },
  "dependencies": {
    "systeminformation": "^5.23.11"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.galaos.desktop",
    "productName": "GalaOS Desktop",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
