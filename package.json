{
  "name": "galaos",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered operating system for unifying apps, software and services",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "pr:helper": "node scripts/pr-helper.js",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "db:migrate": "cd packages/db && npx prisma migrate dev",
    "db:studio": "cd packages/db && npx prisma studio",
    "desktop:dev": "npm run -w @galaos/desktop dev",
    "desktop:dist": "npm run -w @galaos/desktop dist",
    "audit:ci": "npm audit --omit=dev --audit-level=high",
    "outdated:ci": "npm outdated || true",
    "e2e": "playwright test -c apps/web/playwright.config.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@turbo/gen": "^1.11.2",
    "@types/node": "^20.10.6",
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.4"
}
