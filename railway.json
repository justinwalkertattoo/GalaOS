{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm build"
  },
  "deploy": {
    "startCommand": "pnpm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "galaos-api",
      "source": {
        "repo": "justinwalkertattoo/GalaOS",
        "branch": "main"
      },
      "build": {
        "context": ".",
        "dockerfile": "apps/api/Dockerfile"
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "healthcheck": {
        "path": "/api/health",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      },
      "domains": [
        {
          "domain": "api.galaos.app"
        }
      ]
    },
    {
      "name": "galaos-web",
      "source": {
        "repo": "justinwalkertattoo/GalaOS",
        "branch": "main"
      },
      "build": {
        "context": ".",
        "dockerfile": "apps/web/Dockerfile"
      },
      "variables": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_API_URL": "${{galaos-api.RAILWAY_PUBLIC_DOMAIN}}"
      },
      "domains": [
        {
          "domain": "galaos.app"
        }
      ]
    },
    {
      "name": "postgres",
      "image": "postgres:15-alpine",
      "variables": {
        "POSTGRES_DB": "galaos",
        "POSTGRES_USER": "galaos",
        "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}"
      },
      "volumes": [
        {
          "mountPath": "/var/lib/postgresql/data",
          "name": "postgres-data"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:7-alpine",
      "volumes": [
        {
          "mountPath": "/data",
          "name": "redis-data"
        }
      ]
    },
    {
      "name": "qdrant",
      "image": "qdrant/qdrant:latest",
      "variables": {
        "QDRANT__SERVICE__GRPC_PORT": "6334"
      },
      "volumes": [
        {
          "mountPath": "/qdrant/storage",
          "name": "qdrant-data"
        }
      ]
    }
  ],
  "networking": {
    "privateNetworking": true
  },
  "volumes": [
    {
      "name": "postgres-data",
      "size": "10GB"
    },
    {
      "name": "redis-data",
      "size": "5GB"
    },
    {
      "name": "qdrant-data",
      "size": "20GB"
    }
  ]
}
